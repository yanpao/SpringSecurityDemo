<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource ="application.properties"/>

    <context id="MYSQLTables" defaultModelType="flat" targetRuntime="MyBatis3">
        <!--必须放前面-->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <jdbcConnection driverClass="${spring.datasource.driver-class-name}"
                        connectionURL="${spring.datasource.url}"
                        userId="${spring.datasource.username}"
                        password="${spring.datasource.password}">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.wismap.springsecuritydemo.model" targetProject="/home/lihanzhang/文档/MyBatisGenerator">
            <property name="constructorBased" value="true" />
            <property name="enableSuibPackages" value="true" />
            <property name="trimStrngs" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper"  targetProject="/home/lihanzhang/文档/MyBatisGenerator">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.wismap.springsecuritydemo.mapper"  targetProject="/home/lihanzhang/文档/MyBatisGenerator">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table tableName="t_user" domainObjectName="User">
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
        </table>

    </context>
</generatorConfiguration>